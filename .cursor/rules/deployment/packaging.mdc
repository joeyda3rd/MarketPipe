@app.command()
def check():
    """Verify MarketPipe installation and dependencies."""
    import importlib
    import sys
    
    required_modules = [
        "pandas", "duckdb", "pyarrow", "httpx", 
        "typer", "yaml", "prometheus_client"
    ]
    
    typer.echo("üîç Checking MarketPipe installation...")
    
    missing = []
    for module in required_modules:
        try:
            importlib.import_module(module)
            typer.echo(f"‚úÖ {module}")
        except ImportError:
            typer.echo(f"‚ùå {module}")
            missing.append(module)
    
    if missing:
        typer.echo(f"\n‚ùå Missing dependencies: {', '.join(missing)}")
        typer.echo("Try: pip install marketpipe")
